<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar Header -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, [Username]!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="12dp" />

        <!-- Search Bar -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mau makan apa hari ini?"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:layout_marginBottom="24dp" />

        <!-- Slideshow -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="380dp"
                    android:layout_height="190dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_food" />

                <ImageView
                    android:layout_width="380dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sample_food2"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="380dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sample_food3"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Category Menu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="🍛 Rice"
                    android:backgroundTint="#800080"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="🥤 Drink"
                    android:backgroundTint="#800080"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="🍟 Snack"
                    android:backgroundTint="#800080"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="🍰 Dessert"
                    android:backgroundTint="#800080"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Recommended Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rekomendasi Untuk Kamu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Product Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sample_food"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mie Goreng Spesial"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 25.000"
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Product Item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sample_food2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sate Madura"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 8.000"
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- Tombol Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="#FF4444"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp" />
    </LinearLayout>
</ScrollView>
